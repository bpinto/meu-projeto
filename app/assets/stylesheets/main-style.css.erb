  /* PAGINA */
  div#page { background: #FFCC66;}

  /* GERAL */
  * { color: #666; font-size: 12px; font-family: Verdana, Sans-Serif; margin: 0; outline: none; padding: 0; }

  /* BODY */
  body { background: #FFCC66; }
  body#home { background: #FFCC66; }

  /* A */
  a { color: #003399; cursor: pointer; text-decoration: none; }
  a:hover { /* text-decoration: underline; */ }

  /* IMG */
  img { border: none; display: block; }
 
  /* H1 */
  h1 { color: #333; font: italic normal bold 30px/30px Arial, Helvetica, Sans-Serif; letter-spacing: -0.05em; text-shadow: 1px 1px 0 #FFF; }

  /* H2 */
  h2 { color: #333; font: italic normal bold 20px/20px Arial, Helvetica, Sans-Serif; }
   
  /* H3 */
  h3 { color: #333; font: italic normal bold 20px/20px Arial, Helvetica, Sans-Serif; text-shadow: 1px 1px 0 #FFF; }

  /* H4 */
  h4 { color: #333; font: italic normal bold 17px/17px Arial, Helvetica, Sans-Serif; text-shadow: 1px 1px 0 #FFF; }

  /* H5 */
  h5 { color: #333; font: italic normal bold 15px/15px Arial, Helvetica, Sans-Serif; text-shadow: 1px 1px 0 #FFF; }
 
  /* H6 */
  h6 { color: #333; font: italic normal normal 15px/15px Arial, Helvetica, Sans-Serif; text-shadow: 1px 1px 0 #FFF; }

  div.button { text-align: center;}
  
  div.form_tips { color: #888888; }

  a.facebook_login_button { text-indent:-9999px; overflow:hidden; display: block; width: 154px; height: 22px; 
  background: url(<%= asset_path 'login-facebook.png' %>) no-repeat; margin: 20px 50px; }
  a.facebook_login_button:hover { background: url(<%= asset_path 'login-facebook-hover.png' %>) no-repeat; }
  a.facebook_login_button:active { position:relative; top:1px; }

  a.button { -moz-box-shadow:inset 0px 1px 0px 0px #bee2f9; -webkit-box-shadow:inset 0px 1px 0px 0px #bee2f9; box-shadow:inset 0px 1px 0px 0px #bee2f9; background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #63b8ee), color-stop(1, #468ccf) ); background:-moz-linear-gradient( center top, #63b8ee 5%, #468ccf 100% ); filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#63b8ee', endColorstr='#468ccf'); background-color:#63b8ee; -moz-border-radius:6px; -webkit-border-radius:6px; border-radius:6px; border:1px solid #3866a3; display:inline-block; color:#14396a; font-family:arial; font-size:18px; font-weight:bold; padding:7px 6px; text-decoration:none; text-shadow:1px 1px 0px #7cacde; }
  a.button:hover { background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #468ccf), color-stop(1, #63b8ee) ); background:-moz-linear-gradient( center top, #468ccf 5%, #63b8ee 100% ); filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#468ccf', endColorstr='#63b8ee'); background-color:#468ccf; }
  a.button:active { position:relative; top:1px; }

  div.buttonPanel { float: none; text-align: center; }