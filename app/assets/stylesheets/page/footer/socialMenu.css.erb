div.socialMenu ul { width: 180px; display: block; float: right; padding: 10px 0; }

div.socialMenu ul li { display: block; float: left; width: 35px; height: 35px; text-indent: -9999px; margin: 0 7px; }

div.socialMenu ul li.title { width: 180px; font-style: italic; font-family: Georgia; color: #FC6; font-size: 16px; text-indent: 0; float: none; line-height: 15px; font-weight: bold; background: none; margin: 0; height: 25px; }

div.socialMenu ul li.first { margin: 0 7px 0 10px; }

div.socialMenu ul li a { display: block; width: 100%; height: 100%; background: transparent url(<%= asset_path 'icones_redes.png' %>); font-family: Arial; font-weight: bold; }
div.socialMenu ul li a.facebook{ background-position: -85px -2px; }
div.socialMenu ul li a.facebook:hover,
div.socialMenu ul li a.facebook:focus{ background-position: -85px -42px; }
div.socialMenu ul li a.twitter{ background-position: 0px -2px; }
div.socialMenu ul li a.twitter:hover,
div.socialMenu ul li a.twitter:focus{ background-position: 0px -42px; }