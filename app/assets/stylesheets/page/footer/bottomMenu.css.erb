div.bottomMenu ul { display: block; border-right: 1px dotted #9d9d9d; float: left; padding: 0 19px; height: 300px; }

div.bottomMenu ul.first { width: 175px; }
div.bottomMenu ul.second{ width: 165px; }
div.bottomMenu ul.third{ width: 155px; }
div.bottomMenu ul.fourth{ width: 145px; }
div.bottomMenu ul.fifth{ width: 160px; border: none; padding-right: 0; }

div.bottomMenu ul li.title { color: #FC6; font-size: 16px; line-height: 15px; margin: 0 0 30px; font-weight: bold; }

div.bottomMenu ul li { list-style: none; font-family: Georgia; font-style: italic; margin: 10px 0; }

div.bottomMenu ul li a{ color: #9d9d9d; font-family: Arial; font-weight: bold; font-style: italic; }
div.bottomMenu ul li a:hover,
div.bottomMenu ul li a:focus{ color: #FFCC66; margin-left:5px; text-decoration: none; }
div.bottomMenu ul li a.specialLink { color: #FC6; font-weight: bold; }