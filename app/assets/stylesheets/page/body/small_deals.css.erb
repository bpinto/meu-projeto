div.small_deal .deal { border-bottom: solid; margin: 0 0 15px; }

div.small_deal .deal_picture { background: white; border: 1px solid #CCC; display: block; float: left; height: 50px; overflow: hidden; margin: 0 5px 5px 0; overflow: hidden; padding: 5px; width: 50px; -moz-box-shadow: 1px 1px 3px #ddd; }

div.small_deal .deal_title { font: bold 10px/10px Arial, Helvetica, Sans-Serif; display: block; margin-bottom: 5px; }

div.small_deal .deal_title * { font: bold Arial, Helvetica, Sans-Serif; }
div.small_deal .deal_title a { text-decoration: none; }
div.small_deal .deal_title a:hover { text-decoration: underline; }

div.small_deal .dealDate { float: right; margin-top: -11px; }

div.small_deal div.deal ul {display: block; margin-left: 65px }
div.small_deal div.deal li { width: 200px; color: #888; display: block; font: 10px/15px Verdana, Sans-Serif; list-style: none; }

div.small_deal div.deal ul li a,
div.small_deal div.deal ul li strong { font: bold 10px/10px Verdana, Sans-Serif; }
div.small_deal div.deal ul li.average strong.positive { font: bold 10px/10px Verdana, Sans-Serif; color: green; }
div.small_deal div.deal ul li.average strong.negative { font: bold 10px/10px Verdana, Sans-Serif; color: red; }
div.small_deal div.deal ul li.average strong.none { font: bold 10px/10px Verdana, Sans-Serif; }
div.small_deal div.deal ul li a { text-decoration: none; }

div.small_deal div.deal ul.discount { display: block; overflow: hidden; margin: 0 10px 10px 10px; padding: 0; width: 410px; }
div.small_deal div.deal ul.discount li { display: block; float: left; width: auto; }
div.small_deal div.deal ul.discount li span { color: #999; display: block; font-size: 10px; }
div.small_deal div.deal ul.discount li strong { display: block; font: bold 14px/14px Arial, Helvetica, Sans-Serif; margin-top: 5px; }

div.small_deal div.deal ul.discount li.deal_real_price { border-right: 1px solid #DDD; margin-right: 15px; padding-right: 15px; }

div.small_deal div.deal ul.discount li.deal_discount { border-left: 1px solid #DDD; margin-left: 15px; padding-left: 15px; }

div.small_deal div.deal ul.discount li.button { float: right; padding: 13px 0 10px 0; }

div.small_deal div.deal ul.discount li.deal_real_price strong { color: #D69999; text-decoration: line-through; }
div.small_deal div.deal ul.discount li.deal_price strong { color: #3C6; }