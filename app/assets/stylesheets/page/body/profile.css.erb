div.profile { display: block !important; overflow: hidden; position: relative; }

div.profile div.title { border-bottom: 1px solid #E5E5E5; margin: 0 15px 15px; min-height: 40px; overflow: visible; position: relative; }

div.profile div.title h1 { margin: 0; padding-bottom: 10px !important; }

div.profile div.title::after { content: "."; display: block; height: 0; clear: both; visibility: hidden; }

div.profile div.userPicture { height: 190px; width: 160px; float: left; margin: 0 15px; position: relative; overflow: hidden; }

div.profile a.title,
div.profile strong.title { color: #666; display: block; float: right; font: bold 20px/20px Arial, Helvetica, Sans-Serif; letter-spacing: -0.05em; margin: 0 15px 10px 0; table-layout: fixed; word-wrap: break-word; }

div.profile div.aboutMe { float: right; margin: 0 15px 70px 0; width: 440px; }

div.profile p { color: #777; display: block; font: normal normal normal 12px/20px Verdana, Sans-Serif; margin: 0 15px 0 0; table-layout: fixed; word-wrap: break-word; }

div.profile div.interactions { bottom: 30px; left: 190px; position: absolute; }
div.profile div.interactions a { text-decoration: underline; margin-left: 30px;}
div.profile div.interactions a:hover { text-decoration: none; }

div.profile div.interactions div.follow { height: 30px;}

div.profile div.interactions div.unfollow { height: 30px; }