div.dealPage { padding: 15px 15px 0; position: relative; background: #FFF; border-radius: 10px; margin-bottom: 15px;}

div.dealPage div.title { display: block; padding: 0 15px 10px; }

div.dealPage div.title h1 { color: #4C92AC; display: block; font-size: 22px; margin-bottom: 15px; }

div.dealPage div.details { display: block; height: 232px; padding: 0 15px 30px; }

div.dealPage div.details div.dealPicture { background: white; border: 1px solid #CCC; display: block; float: left; margin-right: 30px; margin-bottom: 15px; overflow: hidden; padding: 5px; box-shadow: 1px 1px 3px #ddd; -webkit-box-shadow: 1px 1px 3px #ddd; -moz-box-shadow: 1px 1px 3px #ddd; }

div.dealPage div.details div.dealPicture div { height: 220px; overflow: hidden; width: 300px; }

div.dealPage div.details div.dealPicture img { display: block; margin: auto; }

div.dealPage div.details div.discount { display: block; float: left; margin-bottom: 15px; padding-top: 10px; width: 240px; }

div.dealPage div.details div.discount div.from { display: block; margin-bottom: 5px; }
div.dealPage div.details div.discount div.from span { color: #888; font: bold 15px/15px Arial, Helvetica, Sans-Serif; }
div.dealPage div.details div.discount div.from strong { background: url(<%= asset_path 'bg-pagina-oferta-preco.png' %>) no-repeat center center; color: #900; font: bold 35px/35px Arial, Helvetica, Sans-Serif; }

div.dealPage div.details div.discount div.from strong span { color: #900 !important; font: bold 20px/20px Arial, Helvetica, Sans-Serif; }

div.dealPage div.details div.discount div.for { display: block; margin-bottom: 25px; }
div.dealPage div.details div.discount div.for span { color: #888; font: bold 15px/15px Arial, Helvetica, Sans-Serif; }
div.dealPage div.details div.discount div.for strong { color: #516017; font: bold 35px/35px Arial, Helvetica, Sans-Serif; letter-spacing: -2px; }
div.dealPage div.details div.discount div.for strong span { color: #516017 !important; font: bold 20px/20px Arial, Helvetica, Sans-Serif; letter-spacing: 0; }

div.dealPage div.details div.discount div.goToWebsite { display: block; margin-bottom: 25px; overflow: hidden; }

div.dealPage div.details div.discount div.goToWebsite a.button { background: url(<%= asset_path 'fundos-padrao.jpg' %>) repeat-x 0 -190px; border: 1px solid #834512; color: #834512; display: block; float: left; font: bold 17px/17px Arial, Helvetica, Sans-Serif; padding: 11px 10px 9px; text-align: center; text-decoration: none; text-shadow: 1px 1px 0 #F8D48A; -moz-box-shadow: inset 1px 1px 0 #FEEB99; -moz-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px; }

div.dealPage div.details div.discount div.votes div.like { background: url(<%= asset_path 'like.png' %>) no-repeat; height: 30px; }

div.dealPage div.details div.discount div.votes div.like a { text-decoration: underline; }
div.dealPage div.details div.discount div.votes div.like a:hover { text-decoration: none; }
div.dealPage div.details div.discount div.votes div.like a.like { margin: 0 0 0 30px; }

div.dealPage div.details div.discount div.votes div.dislike { background: url(<%= asset_path 'dislike.png' %>) no-repeat; height: 30px; }
div.dealPage div.details div.discount div.votes div.dislike a { text-decoration: underline; }
div.dealPage div.details div.discount div.votes div.dislike a:hover { text-decoration: none; }
div.dealPage div.details div.discount div.votes div.dislike a.dislike { margin: 0 0 0 30px; }

div.dealPage div.info { display: inline-block; padding: 0 10px 25px 15px; vertical-align: top; zoom: 1; width: 590px;}

div.dealPage div.info div.title { background: #4C92AC; border: none; display: block; margin: 0; padding: 5px; border-radius: 5px 5px 0 0; -webkit-border-radius: 5px 5px 0 0; -moz-border-radius: 5px 5px 0 0; border-bottom: 1px solid #CCC; }

div.dealPage div.info div.title h2 { color: white; font: bold 14px/14px Arial, Helvetica, Sans-Serif; text-align: center; }

div.dealPage div.info div.content { border: 1px solid #DDD; border-top: none; display: block; padding: 20px 20px 5px; border-radius: 0 0 5px 5px; -webkit-border-radius: 0 0 5px 5px; -moz-border-radius: 0 0 5px 5px }

div.dealPage div.info div.content p { color: #666; display: block; font: 11px/15px Verdana, Sans-Serif; padding-bottom: 15px; width: 543px; }

div.opinions { display: block !important; min-height: 300px; }

div.opinions h4 { padding: 0px 0px 5px 20px; }

div.opinions div.topic { margin: 0 0 15px 15px; }

div.opinions div.topic div.newComment { width: 510px;}

div.opinions div.topic div.newComment textarea { background: #EEE; border: 1px solid; font: normal normal normal 11px/17px Verdana, Sans-Serif; height: 105px; margin: 10px 15px 0 25px; padding: 7px; width: 510px; border-color: #CCC #DDD #DDD #CCC;}

div.opinions div.topic div.newComment .button { margin: 5px 0px 0px 10px;}

div.opinions div.content { padding-top: 15px; }

div.opinions div.content div.comment { border-color: #9CB571; }

div.opinions div.opinion { padding-top: 20px; }

div.opinions div.opinion div.comment { position: relative; }

div.opinions div.topic a.user,
div.opinions div.topic div.user { height: 30px; width: 40px; background: #DDD; display: block; float: left; margin: 0 10px 0 0; overflow: hidden; position: relative; }

div.opinions div.topic div.comment { background: url(<%= asset_path 'topico-avaliacoes.png' %>) repeat-y -455px 0;
width: 455px; }

div.opinions div.topic div.comment p.text { background: url(<%= asset_path 'topico-avaliacoes.png' %>) no-repeat 0 0; padding-top: 12px; width: 415px; }

div.opinions div.topic div.comment div.details { background: none; overflow: visible; padding-bottom: 0; width: 415px; }

div.opinions div.topic div.comment p.user { color: #888; display: block; font: 10px/15px Verdana, Sans-Serif; margin: 0 15px 15px 0; }

div.opinions div.topic div.comment p.user a { text-decoration: underline; }
div.opinions div.topic div.comment p.user a:hover { text-decoration: none; }

div.opinions div.topic div.comment div.answers { background: url(<%= asset_path 'topico-avaliacoes.png' %>) no-repeat -910px bottom; width: 455px; overflow: hidden; padding-bottom: 15px; }

.discountTicket { z-index: 1; display: block; position: absolute; opacity: 1 !important; }
.bigTicket { height: 200px; right: -23px; top: 5px; width: 90px; }
.discountTicket.special { background: transparent url(<%= asset_path 'tickets_gold.png' %>) no-repeat; }
.bigTicket.special { background-position: -24px 0; }

.discountTicket strong { display: block; letter-spacing: -3px; text-align: center; }
.bigTicket strong { font: bold 35px/35px Arial, Helvetica, Sans-Serif; padding: 115px 0 4px 6px; }
.discountTicket.special * { color: #7B5800; }

.discountTicket strong sup { font-size: 10px; }