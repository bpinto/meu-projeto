form.search { float: right; display: block; overflow: hidden; width: 290px; }

form.search fieldset { border: none; width: 315px; }

form.search fieldset legend { display: none; }

form.search fieldset input { background: url(<%= asset_path 'busca.png' %>) no-repeat scroll -100px -5px transparent; border: medium none; float: left; font-family: Verdana,Sans-Serif; font-size: 11px; margin-top: 10px; padding: 8px 8px 10px 10px; width: 192px; }

form.search fieldset button { background: url(<%= asset_path 'busca.png' %>) no-repeat 0 0; border: none; cursor: pointer; display: block; float: left; font: normal normal normal 11px Verdana, Sans-Serif; height: 40px; margin: 5px 0 5px 5px; text-indent: -999em; width: 50px; }

form.search select { background: #EEE; border: 1px solid; float: left; margin-left: 5px; padding: 5px; width: 150px; border-color: #CCC #DDD #DDD #CCC; }