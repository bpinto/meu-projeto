.about h3 { margin: 15px 30px 20px; }

.about p { display: block; font: 12px/18px Verdana, Sans-Serif; margin: 0 30px 15px; }

/*Who are we*/
.about .whoAreWe { text-align: justify;}
.about .whoAreWe .weAre,
.about .whoAreWe .how {padding: 0 0 0 30px; }
.about .whoAreWe .weAre p,
.about .whoAreWe .how p,
.about .whoAreWe .weAre strong,
.about .whoAreWe .how strong { font: 12px/18px Arial; }
.about .whoAreWe .weAre strong,
.about .whoAreWe .how strong { font-weight: bold; }
.about .whoAreWe .weAre { margin: 10px 0 0 0; }
.about .whoAreWe .weAre h2,
.about .whoAreWe .how h5 { color: #003399; margin-bottom: 35px; font-family: Georgia; margin: 0 0 15px 30px; padding-right: 30px;}
.about .whoAreWe .how h5 { font-size: 17px; }
.about .whoAreWe .how { background: transparent url(<%= asset_path 'we_are_2.png' %>) no-repeat 30px 0; }

.window #who_are_we_title { border-radius: 10px; height: 40px; padding: 10px; }
.window #who_are_we_text { border-radius: 10px; }

/* help */
.about #help { padding: 0 0 0 30px; font-family: Arial;}
.about #help p { margin: 0 0 10px; padding: 0;  font-family: Arial !important; }
.about #help .category { margin: 30px 0 0; padding: 0; color: #003399; font-size: 16px; font-family: Georgia !important; }
.about #help dl dt a{ outline: none !important; text-decoration: none; display: block; color: #666; font-weight: bold; margin: 10px 0 5px 0; padding: 0 0 0 20px; background: transparent URL(<%= asset_path 'mais_faq.png' %>) no-repeat 0px -1px; font-family: Arial !important; }
.about #help dl dt a:hover,
.about #help dl dt a:focus{ background: transparent url(<%= asset_path 'mais_faq.png' %>) no-repeat 0px -1px; color: #003399; }
.about #help dl dt a.ativo{ background: transparent url(<%= asset_path 'menos_faq.png' %>) no-repeat 0px -1px; color: #003399; text-decoration: underline; }
.about #help dl dd{ display: none; margin: 0 0 20px; padding: 0 0 0 20px; line-height: 18px; font-family: Arial !important; }
.about #help dl dd a:hover,
.about #help dl dd a:focus { text-decoration: underline; }
.about #help dl dd dl dd{ display: block; }

.window #help_title { border-radius: 10px; height: 40px; padding: 10px; }
.window #help_text { border-radius: 10px; }