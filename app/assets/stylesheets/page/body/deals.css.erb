div.main div.dealsMap { display: block; min-height: 375px; position: relative; }

div.main div.dealsMap div.content { padding: 20px 5px 15px; }

div.main div.dealsMap div.content div.content { padding: 0 }

div.dealsList { background-color: #EEE;}

div.dealsList div.deal { position: relative; min-width: 570px; background: white; border: 1px solid #DDD; display: block; min-height: 95px; margin: 0 15px 15px; padding: 15px 15px 0; position: relative; -moz-border-radius: 5px; -webkit-border-radius: 5px; -moz-box-shadow: 1px 1px 0 #fff; }

div.dealsList div.deal::after { content: "."; display: block; height: 0; clear: both; visibility: hidden; }

div.defaultDeal div.deal_left { float: left; }

div.defaultDeal .deal_picture { background: white; border: 1px solid #CCC; display: block; float: left; height: 170px; overflow: hidden; margin: 0 15px 15px 0; overflow: hidden; padding: 5px; width: 180px; -moz-box-shadow: 1px 1px 3px #ddd; }

div.defaultDeal .deal_title { font: bold 18px/20px Arial, Helvetica, Sans-Serif; display: block; margin: 5px 0 10px; }

div.defaultDeal .deal_title * { font: bold 18px/20px Arial, Helvetica, Sans-Serif; }
div.defaultDeal .deal_title a { text-decoration: none; }

div.defaultDeal div.deal ul {display: block; margin: 40px 0; float: left; }
div.defaultDeal div.deal li { width: 230px; color: #888; display: block; font: 10px/15px Verdana, Sans-Serif; list-style: none; margin-bottom: 5px; }

div.defaultDeal div.deal ul li a,
div.defaultDeal div.deal ul li strong { font: bold 10px/10px Verdana, Sans-Serif; }
div.defaultDeal div.deal ul li a { text-decoration: none; }

div.defaultDeal div.deal div.button { float: right; padding: 15px 0 10px 0; margin: 50px 0 0 0; }
div.defaultDeal div.deal div.button a.button { border: 1px solid #039; color: #039; font: 12px/12px Verdana, Sans-Serif; padding: 6px; text-decoration: none; text-shadow: 1px 1px 0 #69C; -moz-box-shadow: inset 1px 1px 0 #00EB87; -moz-border-radius: 3px; -webkit-border-radius: 3px; border-radius: 3px; }

div.defaultDeal div.deal ul.discount { display: block; overflow: hidden; margin: 0 0 10px 5px; padding: 0; width: 530px; }
div.defaultDeal div.deal ul.discount li { display: block; float: left; width: auto; }
div.defaultDeal div.deal ul.discount li span { color: #999; display: block; font-size: 10px; }
div.defaultDeal div.deal ul.discount li strong { display: block; font: bold 18px/18px Arial, Helvetica, Sans-Serif; margin-top: 5px; }

div.defaultDeal div.deal ul.discount li.average { border-right: 1px solid #DDD; margin-right: 15px; padding-right: 15px; }
div.defaultDeal div.deal ul.discount li.average strong.positive { color: green; }
div.defaultDeal div.deal ul.discount li.average strong.negative { color: red; }
div.defaultDeal div.deal ul.discount li.average strong.none { }

div.defaultDeal div.deal ul.discount li.deal_real_price { border-right: 1px solid #DDD; margin-right: 15px; padding-right: 15px; }

div.defaultDeal div.deal ul.discount li.deal_discount { border-left: 1px solid #DDD; margin-left: 15px; padding-left: 15px; }

div.defaultDeal div.deal ul.discount li.deal_date { border-left: 1px solid #DDD; margin-left: 15px; padding-left: 15px; }

div.defaultDeal div.deal ul.discount li.deal_real_price strong { color: #D69999; text-decoration: line-through; }
div.defaultDeal div.deal ul.discount li.deal_price strong { color: #3C6; }

div.defaultDeal div.deal div.votes { margin: auto; position: relative; z-index: 10; padding-bottom: 5px; min-height: 40px; }

div.defaultDeal div.deal div.votes a.like { background: url(<%= asset_path 'like.png' %>) no-repeat transparent; height: 30px; text-indent: -999em; padding-bottom: 5px; }

div.defaultDeal div.deal div.votes a.dislike { background: url(<%= asset_path 'dislike.png' %>) no-repeat; height: 30px; text-indent: -999em; padding-bottom: 5px; width: 5px; }
