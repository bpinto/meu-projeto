div.main div.dealsMap { display: block; min-height: 375px; position: relative; }

div.main div.dealsMap div.content { padding: 20px 5px 15px; }

div.main div.dealsMap div.content div.content { padding: 0 }

div.dealsList { background-color: #EEE;}

div.dealsList div.deal { position: relative; width: 570px; background: white; border: 1px solid #DDD; display: block; min-height: 95px; margin: 0 15px 15px; padding: 15px 15px 0; position: relative; -moz-border-radius: 5px; -webkit-border-radius: 5px; -moz-box-shadow: 1px 1px 0 #fff; }

div.dealsList div.deal::after { content: "."; display: block; height: 0; clear: both; visibility: hidden; }

div.defaultDeal .dealPicture { background: white; border: 1px solid #CCC; display: block; float: left; height: 70px; overflow: hidden; margin: 0 15px 15px 0; overflow: hidden; padding: 5px; width: 85px; -moz-box-shadow: 1px 1px 3px #ddd; }

div.defaultDeal .dealTitle { font: italic bold 18px/20px Arial, Helvetica, Sans-Serif; display: block; margin: 5px 0 10px; }

div.defaultDeal .dealTitle * { font: italic bold 18px/20px Arial, Helvetica, Sans-Serif; }
div.defaultDeal .dealTitle a { text-decoration: none; }

div.defaultDeal .dealDate { float: right; margin-top: -11px; }

div.defaultDeal div.deal ul {display: block; margin-bottom: 5px; margin-left: 110px }
div.defaultDeal div.deal li { width: 430px; color: #888; display: block; font: 10px/15px Verdana, Sans-Serif; list-style: none; margin-bottom: 5px; }

div.defaultDeal div.deal ul li a,
div.defaultDeal div.deal ul li strong { font: bold 10px/10px Verdana, Sans-Serif; }
div.defaultDeal div.deal ul li a { text-decoration: none; }

div.defaultDeal div.deal ul li ul.discount { display: block; overflow: hidden; margin: 0 0 10px 0; padding: 0; width: 410px; }
div.defaultDeal div.deal ul li ul.discount li { display: block; float: left; width: auto; }
div.defaultDeal div.deal ul li ul.discount li span { color: #999; display: block; font-size: 10px; }
div.defaultDeal div.deal ul li ul.discount li strong { display: block; font: bold 20px/20px Arial, Helvetica, Sans-Serif; margin-top: 5px; }

div.defaultDeal div.deal ul li ul.discount li.dealRealPrice { border-right: 1px solid #DDD; margin-right: 15px; padding-right: 15px; }

div.defaultDeal div.deal ul li ul.discount li.dealDiscount { border-left: 1px solid #DDD; margin-left: 15px; padding-left: 15px; }

div.defaultDeal div.deal ul li ul.discount li.button { float: right; padding: 13px 0 10px 0; }

div.defaultDeal div.deal ul li ul.discount li.dealRealPrice strong { color: #D69999; text-decoration: line-through; }
div.defaultDeal div.deal ul li ul.discount li.dealPromoPrice strong { color: #3C6; }

div.defaultDeal div.deal ul li ul.discount li.button a.button { background: url(<%= asset_path 'fundos-padrao.jpg' %>) repeat-x 0 -120px; border: 1px solid #834512; color: #834512; font: 12px/12px Verdana, Sans-Serif; padding: 6px; text-decoration: none; text-shadow: 1px 1px 0 #F8D48A; -moz-box-shadow: inset 1px 1px 0 #FEEB99; -moz-border-radius: 3px; -webkit-border-radius: 3px; border-radius: 3px; }