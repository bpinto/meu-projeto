div.admin div.intern { margin: auto; }

div.admin div.intern div#user_nav { float: right; margin-right: 20px; width: auto; }
div.admin div.intern div#global_nav { float: left; margin-left: 20px; width: auto; }

  ul.globalNavigation { float: left; }

    ul.globalNavigation li { color: #CCC; display: block; float: left; font: italic normal normal 15px/28px Arial, Helvetica, Sans-Serif; height: 29px; overflow: hidden; }

    ul.globalNavigation li a { background: url(<%= asset_path 'navegacao-global.png' %>) no-repeat left top; color: #CCC; display: block; font: normal normal normal 11px/28px Arial, Sans-Serif; height: 29px; padding: 0 10px 0 12px; text-decoration: none !important; }

    ul.globalNavigation li a:hover { color: #FFCC66; text-decoration: underline !important; }

    ul.globalNavigation li a.active { color: #FC6; font-weight: bold; }

    ul.globalNavigation li:first-child a { background: none; padding-left: 0; }

  ul.userNavigation { float: right; }

    ul.userNavigation li:first-child { padding-right: 10px; }

    ul.userNavigation li { color: #FC6; display: block; float: left; font: italic normal normal 13px/28px Arial, Helvetica, Sans-Serif; height: 29px; overflow: hidden; }

    ul.userNavigation li a { background: url(<%= asset_path 'navegacao-global.png' %>) no-repeat left top; color: #CCC; display: block; font: normal normal normal 11px/28px Arial, Sans-Serif; height: 29px; padding: 0 10px 0 12px; text-decoration: none !important; }

    ul.userNavigation li a:hover { color: #FFCC66; text-decoration: underline !important; }

    ul.userNavigation li a.active { color: #FC6; font-weight: bold; }

    ul.userNavigation a.facebook_login_button { background: url(<%= asset_path 'login-facebook.png' %>) no-repeat scroll 0 0 transparent; display: block; float: right; height: 22px; overflow: hidden; text-indent: -9999px; width: 154px; margin: 0; }


    ul.userNavigation a.facebook_login_button:hover { background: url(<%= asset_path 'login-facebook-hover.png' %>) no-repeat; }