div.logo div.content { margin: auto; position: relative; width: 975px; z-index: 10; display: block; padding-bottom: 5px; min-height: 40px; }

a.logo {background: url(<%= asset_path 'logo_home.png' %>) no-repeat scroll -10px 0 transparent; display: block; float: left; height: 73px; text-indent: -999em; width: 350px; margin: 7px 10px 0 0; }

form.share_offer_url { float: right; display: block; overflow: hidden; width: 482px; margin-top: 10px; }

form.share_offer_url fieldset { border: none; width: 480px; }

form.share_offer_url fieldset legend { display: none; }

form.share_offer_url fieldset input { background: url(<%= asset_path 'busca.png' %>) no-repeat scroll -683px -5px transparent; border: medium none; float: left; font-family: Verdana,Sans-Serif; font-size: 11px; margin-top: 10px; padding: 8px 8px 10px 10px; width: 381px; }

form.share_offer_url fieldset button { background: url(<%= asset_path 'share.png' %>) no-repeat 0 0; border: none; cursor: pointer; display: block; float: left; font: normal normal normal 11px Verdana, Sans-Serif; height: 32px; margin: 9px 0 5px 5px; text-indent: -999em; width: 32px; }

form.share_offer_url select { background: #EEE; border: 1px solid; float: left; margin-left: 5px; padding: 5px; width: 150px; border-color: #CCC #DDD #DDD #CCC; }