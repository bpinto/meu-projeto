  body { background: #EEE; }
	body#home { background: #EEE; }
	
	/* A */
	a { color: #FF6600; cursor: pointer; text-decoration: none; }
	a:hover { /* text-decoration: underline; */ }
	
	div.janelaPadrao a { color: #FF6600; text-decoration: underline; }
	div.janelaPadrao a:hover { text-decoration: none; }
	
