@import url(<%= asset_path "pagina/corpo/categorias.css" %>);

/* CABECALHO */
div#cabecalho { padding-bottom: 15px; }

	div#cabecalho div.mensagem div.deslogado { border-top: 3px solid #333; background-color: #FFFFCB; display: block; overflow: hidden; }
	div#corpo div.mensagem div.deslogado { background-color: #EEEEEE; display: block; overflow: hidden; margin-bottom: 15px; -webkit-border-radius: 10px; -moz-border-radius: 10px; }
		div.mensagem div.deslogado div.entrar { margin: auto; width: 855px; }
			div.mensagem div.deslogado div.entrar div.topo { padding: 15px 0; text-align: left; }
				div.mensagem div.deslogado div.entrar div.topo strong { font-size: 15px; font-style: italic;  color: #689A36; }
			
			div.mensagem div.deslogado div.conteudo { }
				div.mensagem div.deslogado div.conteudo div.amigos { float: left; display: block; overflow: hidden; width: 450px; height: 80px; }
					div.mensagem div.deslogado div.conteudo div.amigos div.fotos { width: 455px; display: block; overflow: hidden; padding: 5px 0; padding-right: 0; min-height: 0; height: 25px; margin: 0 0 10px 0; }
						div.mensagem div.deslogado div.conteudo div.amigos div.fotos img { float: left; margin-right: 5px; }
				div.mensagem div.deslogado div.conteudo div.login { float: left; display: block; overflow: hidden; width: 290px; text-align: center; margin: 0 0 0 115px; }
          div.mensagem div.deslogado div.conteudo div.login a { background: url(<%= asset_path 'botao-expansivel.png' %>) no-repeat scroll 283px -168px transparent; display: block; height: 51px; margin: 0 auto 6px; overflow: hidden; width: 290px; }
					div.mensagem div.deslogado div.conteudo div.login a:hover { background-position: 281px -56px; text-decoration: none; }
					div.mensagem div.deslogado div.conteudo div.login a:hover span { background-position: 0 -2px; }
            div.mensagem div.deslogado div.conteudo div.login a span { height: 45px; width: 288px; color: #FFFFFF; display: block; font-family: Arial; font-size: 22px; font-weight: bold;  padding-top: 10px; text-align: center; text-shadow: 1px 2px 1px #006600;background: url(<%= asset_path 'botao-expansivel.png' %>) no-repeat scroll 0 -113px transparent; line-height: 28px; }
					div.mensagem div.deslogado div.conteudo div.login strong { font-weight: normal; font-size: 10px; }

	/* administracao */
	div.administracao { background: #333; border-top: 1px solid #000; height: 29px; text-shadow: 1px 1px 0 #111; }

		div.administracao div.interna { margin: auto; width: 975px; }

			ul.navGlobal { float: left; }
				ul.navGlobal li { color: #CCC; display: block; float: left; font: italic normal normal 15px/28px Arial, Helvetica, Sans-Serif; height: 29px; overflow: hidden; }
					ul.navGlobal li:first-child a { background: none; padding-left: 0; }
          ul.navGlobal li a { background: url(<%= asset_path 'navegacao-global.png' %>) no-repeat left top; color: #CCC; display: block; font: normal normal normal 11px/28px Arial, Sans-Serif; height: 29px; padding: 0 10px 0 12px; text-decoration: none !important; }
					ul.navGlobal li a:hover { color: #FFCC66; text-decoration: underline !important; }
					ul.navGlobal li a.ativo { color: #FFCC66; font-weight: bold; }

			ul.navUsuario { float: right; }
				ul.navUsuario li:first-child { padding-right: 10px; }
				ul.navUsuario li { color: #FFCC66; display: block; float: left; font: italic normal normal 13px/28px Arial, Helvetica, Sans-Serif; height: 29px; overflow: hidden; }
          ul.navUsuario li a { background: url(<%= asset_path 'navegacao-global.png' %>) no-repeat left top; color: #CCC; display: block; font: normal normal normal 11px/28px Arial, Sans-Serif; height: 29px; padding: 0 10px 0 12px; text-decoration: none !important; }
					ul.navUsuario li a:hover { color: #FFCC66; text-decoration: underline !important; }
					ul.navUsuario li a.ativo { color: #FFCC66; font-weight: bold; }
					ul.navUsuario li a.sair:hover { color: #FFCC66; }
					ul.navUsuario li.pt a,
          ul.navUsuario li.en a { background: url(<%= asset_path 'lingua.png' %>) no-repeat; padding: 0; text-indent: -999em; width: 36px; }

					ul.navUsuario li.pt a { background-position: 0 0; }
					ul.navUsuario li.pt a:hover,
					ul.navUsuario li.pt a.ativo { background-position: 0 -31px; }

					ul.navUsuario li.en a { background-position: -36px 0; }
					ul.navUsuario li.en a:hover,
					ul.navUsuario li.en a.ativo { background-position: -36px -30px; }
					

	/* acesso */
	div.acesso { background-color: #FFFFFF; height: 73px; }

		div.acesso div.interna { margin: auto; width: 975px; }

      h1.logo { background: url(<%= asset_path 'logo_home.png' %>) no-repeat scroll -10px 0 transparent; display: block; float: left; height: 73px; text-indent: -999em; width: 350px; margin: 7px 10px 0 0; }
      a.logo { background: url(<%= asset_path 'logo_home.png' %>) no-repeat scroll -10px 0 transparent; display: block; float: left; height: 73px; text-indent: -999em; width: 320px; margin: 7px 10px 0 0; }

			 form.busca { float: right; display: block; overflow: hidden; height: 40px; width: 425px; }
				form.busca fieldset { border: none; width: 425px; }
					form.busca fieldset legend { display: none; }
					form.busca fieldset label { display: block; float: left; height: 50px; font: normal normal bold 12px/50px Verdana, Sans-Serif; margin: 0 14px; text-shadow: -1px 1px 0 #FFF; }
          form.busca fieldset input { background: url(<%= asset_path 'busca.png' %>) no-repeat -320px -5px; border: none; float: left; font-family: Verdana, Sans-Serif; font-size: 11px; margin-top: 10px; padding: 8px 8px 10px 10px; width: 345px; }
          form.busca fieldset button { background: url(<%= asset_path 'busca.png' %>) no-repeat 0 0; border: none; cursor: pointer; display: block; float: left; font: normal normal normal 11px Verdana, Sans-Serif; height: 40px; margin: 5px 0 5px 5px; text-indent: -999em; width: 50px; }
					form.busca fieldset button:hover { background-position: -50px 0; }
					

	/* caminho */
  div.caminho { background-color: #EEE; display: block; overflow:hidden}

		div.caminho div.conteudo { margin: auto; position: relative; width: 975px; z-index: 10; display: block; padding-bottom: 5px; min-height: 40px; }

			ul.caminho { padding-top: 14px; display: inline-block; overflow: hidden; width: 550px; zoom: 1; }
			ul.comLocal { padding-top: 5px; width: 970px; }
				ul.caminho li { color: #666; display: block; float: left; font: normal normal bold 10px/20px Verdana, Sans-Serif; margin-right: 5px; padding: 0; }
					ul.caminho li a { color: #999; font: normal normal normal 10px/20px Verdana, Sans-Serif; margin-right: 5px; padding: 0; }
					ul.caminho li a:hover { color: #666; text-decoration: underline; }
					ul.caminho li a.ativo { font-weight: bold; }
					ul.caminho li span { color: #999; font: normal normal normal 10px/20px Verdana, Sans-Serif; padding: 0; }
