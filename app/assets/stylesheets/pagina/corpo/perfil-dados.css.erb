/* PERFIL DADOS */
div.perfilDados { display: block !important; min-height: 300px; overflow: hidden; }

	div.perfilDados h3 { margin: 0 0 20px 15px; }
	
	div.perfilDados h5 { background: url(<%= asset_path 'perfil-dados.jpg' %>) no-repeat; display: block; padding: 15px; }
	
	div.perfilDados div.dados { background: url(<%= asset_path 'perfil-dados.jpg' %>) repeat-y -505px 0; clear: both; display: block; margin: 15px 15px 0 15px; padding: 0; }
	
		div.perfilDados div.dados ul { background: url(<%= asset_path 'perfil-dados.jpg' %>) no-repeat -1010px bottom; padding: 0 15px 5px 15px; }
			div.perfilDados div.dados ul li { border-top: 1px solid #E5E5E5; display: block; list-style: none; overflow: hidden; padding: 10px 0; }
				div.perfilDados div.dados ul li a { color: #789F00; }
				div.perfilDados div.dados ul li a:hover { text-decoration: underline; }
				
				div.perfilDados div.dados ul li.msn,
				div.perfilDados div.dados ul li.gtalk { background: url(<%= asset_path 'icones-perfil-dados.jpg' %>) no-repeat; padding-left: 25px; }
				div.perfilDados div.dados ul li.msn { background-position: -8px 1px; }
				div.perfilDados div.dados ul li.gtalk { background-position: -8px -30px; }
				
				div.perfilDados div.dados ul li a.twitter,
				div.perfilDados div.dados ul li a.orkut,
				div.perfilDados div.dados ul li a.facebook,
				div.perfilDados div.dados ul li a.flickr { background: url(<%= asset_path 'icones-perfil-dados.jpg' %>) no-repeat 0 0; display: block; float: left; height: 32px; margin: 3px 25px 0 0; text-indent: -999em; width: 32px; }
				div.perfilDados div.dados ul li a.twitter { background-position: 0 -64px; }
				div.perfilDados div.dados ul li a.twitter:hover { background-position: 0 -96px; }
				div.perfilDados div.dados ul li a.orkut { background-position: 0 -128px; }
				div.perfilDados div.dados ul li a.orkut:hover { background-position: 0 -160px; }
				div.perfilDados div.dados ul li a.facebook { background-position: 0 -192px; }
				div.perfilDados div.dados ul li a.facebook:hover { background-position: 0 -224px; }
				div.perfilDados div.dados ul li a.flickr { background-position: 0 -256px; }
				div.perfilDados div.dados ul li a.flickr:hover { background-position: 0 -288px; }
