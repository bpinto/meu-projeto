/* OFERTAS CATEGORIA */
div.ofertasCategoria { }

	div.ofertasCategoria h3,
		div.ofertasCategoria h3 strong { font-size: 16px !important; }
		div.ofertasCategoria h3 a { font-size: 16px !important; }
	
	div.ofertasCategoria div.alerta { margin: 20px 15px 15px; }
	
	div.ofertasCategoria strong.titulo { color: #4C92AC; display: block; font: 14px/14px Arial, Sans-Serif; margin: 0 20px 15px; padding-top: 20px; }
	
	div.ofertasCategoria ul { display: block; padding: 15px 20px ; }
		div.ofertasCategoria ul li { display: block; list-style: none; }
			div.ofertasCategoria ul li a { background: #e5e5e5 url(<%= asset_path 'icones-ofertas-categoria.png' %>) no-repeat; display: block; margin-bottom: 2px; overflow: hidden; text-decoration: none; /**/ border-radius: 5px; -webkit-border-radius: 5px; -moz-border-radius: 5px; }
				div.ofertasCategoria ul li a span.categoria { color: #333; display: block; float: left; font: bold 13px/30px Arial, Sans-Serif; height: 30px; margin-left: 30px; }
				div.ofertasCategoria ul li a span.ofertas { color: #666; display: block; float: right; font: bold 15px/31px Arial, Sans-Serif; height: 30px; margin-right: 7px; }
			div.ofertasCategoria ul li a:hover { background-image: url(<%= asset_path 'icones-ofertas-categoria-hover.png' %>); }
				div.ofertasCategoria ul li a:hover span.categoria { color: #fff; }
				div.ofertasCategoria ul li a:hover span.ofertas { color: #fff; }				
				
				div.ofertasCategoria ul li.drink a { background-position: 0 0; }
				div.ofertasCategoria ul li.drink a:hover { background-color: #32C1C9; }
				div.ofertasCategoria ul li.beauty-health a { background-position: 0 -30px; }
				div.ofertasCategoria ul li.beauty-health a:hover { background-color: #BB5992; }
				div.ofertasCategoria ul li.phone-camera a { background-position: 0 -60px; }
				div.ofertasCategoria ul li.phone-camera a:hover { background-color: #7B624E; }
				div.ofertasCategoria ul li.music-movie a { background-position: 0 -90px; }
				div.ofertasCategoria ul li.music-movie a:hover { background-color: #E6B443; }
				div.ofertasCategoria ul li.home a { background-position: 0 -120px; }
				div.ofertasCategoria ul li.home a:hover { background-color: #0F83A1; }
				div.ofertasCategoria ul li.electronics a { background-position: 0 -150px; }
				div.ofertasCategoria ul li.electronics a:hover { background-color: #996666; }
				div.ofertasCategoria ul li.fitness a { background-position: 0 -180px; }
				div.ofertasCategoria ul li.fitness a:hover { background-color: #D85454; }
				div.ofertasCategoria ul li.computer a { background-position: 0 -210px; }
				div.ofertasCategoria ul li.computer a:hover { background-color: #6F9C7D; }
				div.ofertasCategoria ul li.book a { background-position: 0 -240px; }
				div.ofertasCategoria ul li.book a:hover { background-color: #6F9C7D; }
				div.ofertasCategoria ul li.clothes a { background-position: 0 -270px; }
				div.ofertasCategoria ul li.clothes a:hover { background-color: #6F9C7D; }
				div.ofertasCategoria ul li.travel a { background-position: 0 -300px; }
				div.ofertasCategoria ul li.travel a:hover { background-color: #6F9C7D; }
				div.ofertasCategoria ul li.restaurant a { background-position: 0 -330px; }
				div.ofertasCategoria ul li.restaurant a:hover { background-color: #6F9C7D; }
				div.ofertasCategoria ul li.toy a { background-position: 0 -360px; }
				div.ofertasCategoria ul li.toy a:hover { background-color: #6F9C7D; }
				div.ofertasCategoria ul li.car a { background-position: 0 -390px; }
				div.ofertasCategoria ul li.car a:hover { background-color: #6F9C7D; }
				
	div.ofertasCategoria a.verMais { background: url(<%= asset_path 'bt-ver-todas-ofertas.jpg' %>) no-repeat; display: block; height: 43px; margin: 0 auto 20px; text-indent: -999em; width: 230px; }
