/* SUGESTOES AMIGO */
div.sugestoesAmigo {}
	div.sugestoesAmigo h3 { float: left; margin: 5px 15px 20px 15px; }
	
	div.sugestoesAmigo h5 a { color: #333; display: block; float: left; font: italic normal bold 15px/15px Arial, Helvetica, Sans-Serif; padding-bottom: 5px; table-layout: fixed; width: 190px; word-wrap: break-word; }
	div.sugestoesAmigo h5 a:hover { color: #789F00; }
	div.sugestoesAmigo p { float: left; table-layout: fixed; width: 190px; word-wrap: break-word; }
		div.sugestoesAmigo p span { color: #999; display: block; font-size: 10px; margin-top: 5px; }
	
	div.sugestoesAmigo div.texto { clear: both; display: block; margin: 0 15px; width: 285px; }
	div.sugestoesAmigo div.texto div.cima { background: url(<%= asset_path 'sugestoes-amigo.jpg' %>) no-repeat 0 0; height: 32px; width: 285px; }
	div.sugestoesAmigo div.texto div.baixo { background: url(<%= asset_path 'sugestoes-amigo.jpg' %>) no-repeat -285px 0; height: 12px; width: 285px; }
	div.sugestoesAmigo div.texto p { border-left: 2px solid #E4E4E4; border-right: 2px solid #E4E4E4; float: none; font: 14px/20px Arial, Helvetica, Sans-Serif; padding: 0 15px; width: 251px; }
	
	div.sugestoesAmigo div.sugestoes {clear: both; padding: 0 15px; }
		div.sugestoesAmigo div.sugestoes strong { background: url(<%= asset_path 'sugestoes-acessozero.jpg' %>) no-repeat; display: block; font: italic normal bold 16px/16px Arial, Helvetica, Sans-Serif; height: 50px; margin-bottom: 15px; padding: 10px 15px 10px 85px; width: 185px; }
		div.sugestoesAmigo div.sugestoes strong.descubra { background-position: 0 0; }
		div.sugestoesAmigo div.sugestoes strong.receba { background-position: 0 -70px; }
		div.sugestoesAmigo div.sugestoes strong.compartilhe { background-position: 0 -140px; }
		div.sugestoesAmigo div.sugestoes strong.relacione { background-position: 0 -210px; margin-bottom: 0; }
