/* compartilhar */
div.compartilhar { }

	div.compartilhar ul.social { display: block; overflow: hidden; padding: 5px; }
		div.compartilhar ul.social li { display: inline; list-style: none; }
			div.compartilhar ul.social li a { background: #fff url(<%= asset_path 'icones-compartilhar.png' %>) no-repeat; border: 1px solid #fff; color: #666; display: block; float: left; padding: 50px 0 10px; text-align: center; text-decoration: none; width: 74px; /**/ border-radius: 5px; -webkit-border-radius: 5px; -moz-border-radius: 5px; }
			div.compartilhar ul.social li a:hover { background-color: #E9F2F5; border-color: #D4DDE0; color: #4C92AC; text-decoration: underline; }
			
			div.compartilhar ul.social li a.twitter { background-position: 22px 10px; }
			div.compartilhar ul.social li a.orkut { background-position: -54px 10px; }
			div.compartilhar ul.social li a.facebook { background-position: -130px 10px; }
			div.compartilhar ul.social li a.email { background-position: -206px 10px; }
