<table class="profile" summary="Perfil">
    <tr>
        <td class="main">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <br/>
            <% unless current_user?(@user) %>
                <div id="follow_form">
                <% if current_user.following?(@user) %>
                    <%= render 'unfollow' %>
                <% else %>
                    <%= render 'follow' %>
                <% end %>
                </div>
                <br/>
            <% end %>
            <% unless @user.ofertas.empty? %>
                <table class="ofertas" summary="Minhas Ofertas">
                    <%= render @ofertas %>
                </table>
                <%= will_paginate @ofertas %>
            <% end %>
        </td>
        <td class="sidebar round">
            <strong>Nome</strong> <%= @user.name %><br />
            <strong>URL</strong>  <%= link_to user_path(@user), @user %>
        </td>
    </tr>
    
</table>
