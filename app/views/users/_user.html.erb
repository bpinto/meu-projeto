<div class="user">
  <div class="left_panel">
    <%= link_to(image_tag(user.gravatar_url, :alt => user.username, :title => user.username), user_path(user.username), :class => "user_picture") %>
  </div>
  <strong class="user_name"><%= link_to user.name, user_path(user.username), :title => user.name %></strong>
  <ul>
    <li class="user_username"><strong>Username: </strong><%= user.username %></li>
    <li class="user_deals"><strong><%= user.deals.length %> </strong> ofertas compartilhadas!</li>
    <li class="user_following">Seguindo <strong><%= user.following.length %> </strong> usuÃ¡rios!</li>
    <li class="user_followers"><strong><%= user.followers.length %> </strong> seguidores!</li>
  </ul>
  <div class="button">
    <%= link_to 'Visualizar Perfil', user_path(user.username), :class => "button"%>
  </div>
  <% if user_signed_in? && current_user != user %>
    <div class="interactions">
      <% if current_user.follow? user %>
        <div class="unfollow">
          <%= link_to I18n.t("actions.unfollow"), unfollow_user_path(user.username), :class => :unfollow %>
        </div>
      <% else %>
        <div class="follow">
          <%= link_to I18n.t("actions.follow"), follow_user_path(user.username), :class => :follow %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
