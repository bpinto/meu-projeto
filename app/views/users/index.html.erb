<div class="span8">
  <div class="default_window page_title grey_background">
    <h1>Usuários</h1>
  </div>
  <div class="main">
    <div class="users_map">
      <div class="default_window grey_background users_list" id="users_list">
        <div class="content">
          <div class="content default_user">
            <div class="zero-PagingTable">
              <div class="zero-PagingTableGrid">
                <% @users.each_with_index do |user, index| %>
                  <%= render :partial => 'users/user', :locals => {:user => user, :index => index} %>
                <% end %>
                <%= will_paginate @users %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="side span4">
  <div class="default_window white_background">
    <div class="title">
      <h3>Opções de Busca</h3>
    </div>
    <div class="content">
      <form id="search_form" action="<%= users_path %>" method="get" class="search">
        <fieldset>
          <legend>Buscar</legend>
          <%= text_field_tag :search, params[:search]%>
          <button id="search" type="submit">Buscar</button>
        </fieldset>

        <% select_tag "search_order", search_options %>
      </form>
    </div>
  </div>
</div>

