<div class="defaultWindow pageTitle greyBackground">
  <h1>Ofertas do Dia</h1>
</div>
<div class="main">
  <div class="dealsMap">
    <div class="defaultWindow greyBackground dealsList" id="dealsList">
      <div class="content">
        <div class="content defaultDeal">
          <div class="zero-PagingTable">
            <div class="zero-PagingTableGrid">
              <% if @deals.empty? %>
                <h4> Não há ofertas cadastradas hoje ainda, seja o primeiro a compartilhar uma oferta com seus amigos!</h4>
              <% else %>
                <% @deals.each_with_index do |deal, index| %>
                  <%= render :partial => 'deals/deal', :locals => {:deal => deal, :index => index} %>
                <% end %>
                <%= will_paginate @deals %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="side">
  <div class="buttonPanel">
    <% if user_signed_in? %>
      <%= link_to I18n.t("actions.share_an_offer"), new_deal_path, :class => :shareButton %>
      <%= link_to I18n.t("actions.my_profile"), user_path(current_user.username), :class => :profileButton %>
    <% else %>
      <%= link_to I18n.t("actions.sign_up"), new_user_registration_path, :class => :signupButton %>
      <%= link_to I18n.t("actions.sign_in"), new_user_session_path, :class => :signinButton %>
    <% end %>
  </div>
  <div class="defaultWindow whiteBackground">
    <div class="title">
      <h3>Opções de Busca</h3>
    </div>
    <div class="content">
      <form action="<%= search_path %>" method="get" class="search">
        <fieldset>
          <legend>Buscar</legend>
          <%= text_field_tag :search, params[:search]%>
          <button id="search" type="submit">Buscar</button>
        </fieldset>
      </form>
      Inserir os filtros aqui
    </div>
  </div>
</div>

