<!-- PRINCIPAL -->
<div class="main">
  <!-- pagina oferta -->
  <div class="defaulWindow dealPage">
    <!-- AddThis Button BEGIN -->
    <div class="addthis_toolbox addthis_default_style ">
      <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
      <a class="addthis_button_tweet"></a>
      <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
      <a class="addthis_counter addthis_pill_style"></a>
    </div>
    <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e6fcafd7ed570a3"></script>
    <!-- AddThis Button END -->
    <!-- titulo -->
    <div class="title">
      <h1 class="dealTitle"><%= @deal.title %></h1>
      <strong>Compartilhada por: </strong><%= link_to @deal.user.username, user_path(@deal.user.username) %>
    </div>
    <!-- titulo -->

    <!-- detalhes -->
    <div class="details">
      <div class="dealPicture">
        <!-- TODO: IMAGEM -->
        <div><%= link_to(image_tag(asset_path('no_picture_big.png'), :alt => "Oferta sem imagem", :title => @deal.title, :size => '10px'), deal_path(@deal), :class => "foto") %></div>
      </div>
      <div class="discount">
        <div class="bigTicket special discountTicket">
          <strong class="dealDiscount"><%= @deal.discount.to_i %>%</strong>
        </div>
        
        <% if @deal.price? %>
          <div class="from">
            <span>de:</span>
            <!-- TODO: Refazer essa parte abaixo quando o layout for revisto -->
            <strong class="dealRealPrice"><%= number_to_currency @deal.real_price, :format => "<span>%u</span>%n", :separator => ",<span>"%></span></strong>
          </div>
          <div class="for ">
            <span>por:</span>
            <!-- TODO: Refazer essa parte abaixo quando o layout for revisto -->
            <strong class="dealPromoPrice"><%= number_to_currency @deal.price, :format => "<span>%u</span>%n", :separator => ",<span>"%></span></strong>
          </div>
        <% end %>

        <div class="goToWebsite">
          <%= link_to "Ir para o site", @deal.link, :class => "button" %>
        </div>
        <div class="dealInfo">
          <li><strong>Em: </strong><span class="dealCategory"><%= Deal.i18n_category(@deal.category) %></span></li>
          <li><strong>Válida para: </strong><spam class="dealCity"><%= @deal.city.name %></spam></li>
        </div>
        <% if user_signed_in? %>
          <div class="votes">
            <div class="like">
              <% if current_user.up_voted? @deal %>
                <%= link_to 'Gostei!(Desfazer)', unvote_deal_path(@deal), :class => "like" %>
              <% else %>
                <%= link_to 'Gostei!', upvote_deal_path(@deal), :class => "like" %>
              <% end %>
              <div class="likes">
                <% if @deal.up_votes <= 1 %>
                  <span><%= @deal.up_votes %> gostou!</span>
                <% else %>
                  <span><%= @deal.up_votes %> gostaram!</span>
                <% end %>
              </div>
            </div>
            <div class="dislike"> 
              <% if current_user.down_voted? @deal %>
                <%= link_to 'Não Gostei!(Desfazer)', unvote_deal_path(@deal), :class => "dislike" %>
              <% else %>
                <%= link_to 'Não gostei!', downvote_deal_path(@deal), :class => "dislike" %>
              <% end %>
              <div class="dislikes">
                <% if @deal.down_votes <= 1 %>
                  <span><%= @deal.down_votes %> não gostou!</span>
                <% else %>
                  <span><%= @deal.down_votes %> não gostaram!</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- /detalhes -->
    <div class="info">
      <div class="title">
        <h2>Descrição da Oferta</h2>
      </div>
      <div class="content">
        <p><%= @deal.description %></p>
      </div>
    </div>
  </div>
  <!-- /pagina oferta -->

    <!-- TODO: COMENTÁRIO -->
    <div class="content">
      <!-- janela CONTEÚDO --> 
      <div class="window"> 
        <div class="mediumWindow"> 
          <div class="up"></div> 
          <div class="middle profile" id="tabAreaId" style="min-height: 150px;"> 
            <div class="briefWindow opinions"> 
              <div class="upBar"> 
                <h4><%= I18n.t("comments") %></h4> 
                <div class="topic newTopic" >
                  <% if can? :manage, @comment %>
                    <div class="newComment" >
                      <%= form_for([@deal,@comment]) do |f| %>
                        <%= f.text_area :comment, :class => "TextArea" %><br/>
                        <%= f.submit I18n.t("actions.comment"), :class => :button %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div> 
              <% if not @deal.comments.empty? %>
                <div class="content"> 
                  <% @deal.comments.each do |comment| %>
                    <%= render :partial => 'comments/comment', :locals => {:comment => comment} %>
                  <% end %>
                </div>  
              <% else %>
                <div class="withoutContent">
                  <h4>Não há comentários cadastrados para essa oferta ainda. Seja o primeiro a dar sua opinião escrevendo seu comentário no campo acima.</h4>
                </div>
              <% end %>
              <div class="downBar"><!-- paginacao  --></div> 
            </div> 
          </div>
          <div class="down"></div>
        </div>
      </div>
      <!-- /janela CONTEÚDO --> 
    </div>
</div>
<!-- /PRINCIPAL -->

