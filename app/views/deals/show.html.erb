<!-- PRINCIPAL -->
<div class="principal">
  <!-- pagina oferta -->
  <div class="janelaPadrao paginaOferta">
    <!-- titulo -->
    <div class="titulo">
      <h1><%= @deal.title %></h1>
    </div>
    <!-- titulo -->

    <!-- detalhes -->
    <div class="detalhes">
      <div class="foto">
        <!-- TODO: IMAGEM -->
        <div><img src="http://www.acessozero.com.br/portal/image/frugpalladium-iogurterias-curitiba-0-17336014-7.jpg"></div>
      </div>

      <div class="desconto">
        <div class="desconto">
          <div class="bigTicket special discountTicket">
            <strong><%= @deal.discount %><sup>%</sup></strong>
          </div>

          <div class="de">
            <span>de:</span>
            <!-- TODO: Refazer essa parte abaixo quando o layout for revisto -->
            <strong><%= number_to_currency @deal.real_price, :format => "<span>%u</span>%n", :separator => ",<span>"%></span></strong>
          </div>

          <div class="por ">
            <span>por:</span>
            <!-- TODO: Refazer essa parte abaixo quando o layout for revisto -->
            <strong><%= number_to_currency @deal.price, :format => "<span>%u</span>%n", :separator => ",<span>"%></span></strong>
          </div>

          <div class="comprar">
            <%= link_to "Ir para o site", @deal.link, :class => "botao" %>
          </div>
        </div>
      </div>
    </div>
    <!-- /detalhes -->

    <!-- info -->
    <div class="info">
      <div class="barra">
        <h2>Comentários</h2>
      </div>

      <!-- TODO: COMENTÁRIO -->
      <div class="conteudo">
        <div class="dica topicoPadrao topicoAvaliar">
          <div class="comentario">
            <div class="titulo">
              <a href="/consumidor/tamyresantunes"><img src="/portal/image/tamyresantunes-1.jpg"></a>

              <p>Até no frio a Frug dá uma opção bacana, frozen com Amarula ou com Contreau. Hmmm... uma delícia! </p>
              <p class="usuario"><a href="/consumidor/tamyresantunes">Tamyres Antunes</a> em 30/06/2011</p>
            </div>
          </div>
        </div>

        <p></p>
      </div>
    </div>
    <!-- /info -->
  </div>
  <!-- /pagina oferta -->
</div>
