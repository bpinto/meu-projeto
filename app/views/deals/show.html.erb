<!-- PRINCIPAL -->
<div class="principal">
  <!-- pagina oferta -->
  <div class="janelaPadrao paginaOferta">
    <!-- AddThis Button BEGIN -->
    <div class="addthis_toolbox addthis_default_style ">
      <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
      <a class="addthis_button_tweet"></a>
      <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
      <a class="addthis_counter addthis_pill_style"></a>
    </div>
    <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e6fcafd7ed570a3"></script>
    <!-- AddThis Button END -->
    <!-- titulo -->
    <div class="titulo">
      <h1 class="deal_title"><%= @deal.title %></h1>
      <span class="deal_category"><%= Deal.i18n_category(@deal.category) %></span>
    </div>
    <!-- titulo -->

    <!-- detalhes -->
    <div class="detalhes">
      <div class="foto">
        <!-- TODO: IMAGEM -->
        <div><%= link_to(image_tag(asset_path('semImagem.jpg'), :alt => "Oferta sem imagem", :title => @deal.title), deal_path(@deal), :class => "foto") %></div>
      </div>
      <div class="desconto">
        <div class="bigTicket special discountTicket">
          <strong class="deal_discount"><%= @deal.discount %><sup>%</sup></strong>
        </div>
        
        <% if @deal.price? %>
          <div class="de">
            <span>de:</span>
            <!-- TODO: Refazer essa parte abaixo quando o layout for revisto -->
            <strong class="deal_real_price"><%= number_to_currency @deal.real_price, :format => "<span>%u</span>%n", :separator => ",<span>"%></span></strong>
          </div>
          <div class="por ">
            <span>por:</span>
            <!-- TODO: Refazer essa parte abaixo quando o layout for revisto -->
            <strong class="deal_price"><%= number_to_currency @deal.price, :format => "<span>%u</span>%n", :separator => ",<span>"%></span></strong>
          </div>
        <% end %>

        <div class="comprar">
          <%= link_to "Ir para o site", @deal.link, :class => "botao" %>
        </div>
        <% if user_signed_in? %>
          <div class="votes">
            <div class="like">
              <% if current_user.up_voted? @deal %>
                <%= link_to 'Gostei!(Desfazer)', unvote_deal_path(@deal), :class => "like" %>
              <% else %>
                <%= link_to 'Gostei!', upvote_deal_path(@deal), :class => "like" %>
              <% end %>
              <!--<span><%= @deal.up_votes %> gostaram dessa oferta!</span>-->
            </div>
            <div class="dislike"> 
              <% if current_user.down_voted? @deal %>
                <%= link_to 'Não Gostei!(Desfazer)', unvote_deal_path(@deal), :class => "dislike" %>
              <% else %>
                <%= link_to 'Não gostei!', downvote_deal_path(@deal), :class => "dislike" %>
              <% end %>
              <!--<span><%= @deal.down_votes %> não gostaram dessa oferta!</span>-->
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- /detalhes -->
    <div class="info">
      <div class="barra">
        <h2>Descrição da Oferta</h2>
      </div>
      <div class="conteudo">
        <p><%= @deal.description %></p>
      </div>
    </div>
  </div>
  <!-- /pagina oferta -->


    <!-- TODO: COMENTÁRIO -->
    <div class="conteudo">
      <!-- janela CONTEÚDO --> 
  	  <div class="media"> 
			  <div class="janela menu"> 
				  <div class="cima"></div> 
					<div class="meio" id="tabAreaId" style="min-height: 150px;"> 
					  <div class="janelaResumo avaliacoes"> 
						  <div class="barraCima"> 
							  <h4><%= I18n.t("comments") %></h4> 
                <div class="topico novo" >
                  <% if can? :manage, @comment %>
                    <div class="comentario" >
                      <%= form_for([@deal,@comment]) do |f| %>
                        <%= f.text_area :comment, :class => "TextArea" %><br/>
                        <%= f.submit I18n.t("actions.comment") %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
						  </div> 
              <% if not @deal.comments.empty? %>
		  				  <div class="conteudo"> 
                  <% @deal.comments.each do |comment| %>
                    <%= render :partial => 'comments/comment', :locals => {:comment => comment} %>
                  <% end %>
  							</div>  
              <% else %>
                <div class="semConteudo">
                  <h4>Não há comentários cadastrados para essa oferta ainda. Seja o primeiro a dar sua opinião escrevendo seu comentário no campo acima.</h4>
                </div>
              <% end %>
              <div class="barraBaixo"> 
							  <!-- paginacao  -->
							</div> 
            </div> 
  				</div> 
 				</div>
			</div>
  		<!-- /janela CONTEÚDO --> 
    </div>
</div>
<!-- /PRINCIPAL -->

