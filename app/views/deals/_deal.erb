<div class="offer">
  <div class="deal">
    <%= link_to(image_tag(asset_path('semImagem.jpg'), :alt => "Oferta sem imagem", :title => deal.title), deal_path(deal), :class => "dealPicture") %>
    <div class="offer_time contador#{index}" data-time="#{deal.end_date.try(:to_s, :deal)}" style="float: right" >
      <% if deal.end_date? %>
        <%= l deal.end_date.to_date %>
      <% else %>
        Não informado
      <% end %>
    </div>
    <strong class="dealTitle"><%= link_to deal.title, deal_path(deal) %></strong>
    <ul>
      <li class="deal_user"><strong>Compartilhada por: </strong><%= link_to deal.user.name, user_path(deal.user.username) %></li>
      <li class="deal_category"><strong>Categoria: </strong><%= Deal.i18n_category(deal.category) %></li>
      <li class="deal_company"><strong>Empresa: </strong><%= deal.company %></li>
      <li>
        <ul class="desconto">
          <% if (deal.real_price && deal.price) %>
            <li class="precoOriginal"><span>Preço original</span><strong><%= number_to_currency deal.real_price %></strong></li>
            <li class="precoOferta"><span>Preço oferta</span><strong><%= number_to_currency deal.price %></strong></li>
          <% end %>
          <li class="desconto"><span>Desconto</span><strong><%= deal.discount %>%</strong></li> 
          <li class="botao"><%= link_to 'Saiba mais', deal_path(deal), :class => "botao"%></li>
        </ul>
      </li>
    </ul>
  </div>
</div>
