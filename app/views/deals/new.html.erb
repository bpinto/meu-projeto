<h1>Deals#new</h1>
<table>
  <tr>
    <td>
      <%= form_for([current_user, @deal]) do |f| %>
        <div>
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>

        <div>
          <%= f.label :price %>
          <%= f.text_field :price %>
        </div>

        <div>
          <%= f.label :real_price %>
          <%= f.text_field :real_price %>
        </div>

        <div>
          <%= f.label :kind %>
          <%= f.select :kind, Deal.kinds %>
        </div>

        <div>
          <%= f.label :description %>
          <%= f.text_area :description %>
        </div>

        <div>
          <%= f.label :link %>
          <%= f.text_field :link %>
        </div>

        <div>
          <%= f.submit "Confirm" %>
        </div>
      <% end %>
    </td>
  </tr>
</table>
