<div class="main">
  <div class="window medium_window">
    <div class="up"></div>
    <div class="middle newProfile" id="userCreateAreaId">
      <div>
        <h1>DealWit.me</h1>
        <!-- TODO: Facebook / Google -->
        <h3>Reenviar e-mail de confirmação</h3>

        <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
          <ol>
            <li>
              <%= f.label :email %>
              <%= f.email_field :email %>
            </li>
          </ol>

          <div class="button">
            <%= f.submit I18n.t("actions.send_confirmation"), :type=>"image", :src=> asset_path('botao.png'), :alt=> "Confirmar" %>
          </div>
        <% end %>

        <%= render :partial => "devise/shared/links" %>
      </div>
    </div>
    <div class="down"></div>
  </div>
</div>
