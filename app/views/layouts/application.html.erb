        <!-- TODO: Menu -->
				<div class="administracao">
					<div class="interna">
						<ul class="navGlobal">
              <li><%= link_to_active "Início", root_path %></li>
              <li><%= link_to_active 'Ofertas do Dia', deals_today_path %></li>
