            <li><a href="/deals/today/travel"><%= Deal.i18n_category(Deal::CATEGORY_TRAVEL) %></a></li>
            <li><a href="/deals/today/toy"><%= Deal.i18n_category(Deal::CATEGORY_TOY) %></a></li>
            <li><a href="/deals/today/car"><%= Deal.i18n_category(Deal::CATEGORY_CAR) %></a></li>
          </ul>

          <ul class="fourth">
            <li class="title">Informações</li>
            <li><a href="/portal/help">Ajuda</a></li>
          </ul>

          <ul class="fifth">
            <li class="title">Contato</li>
            <li><a href="http://dealwitme.uservoice.com/" target="_blank">Fale conosco</a></li>
            <li><a href="http://www.dealwit.us/" target="_blank">Siga nosso Blog</a></li><br/>
            <% if user_signed_in? %>
                <!-- TODO: Menu logado -->
                <li><%= link_to_active "Meu Perfil", user_path(current_user.username), :class => "specialLink" %></li>
                <li><%= link_to_active "Cadastrar Oferta", new_deal_path, :class => "specialLink" %></li>
