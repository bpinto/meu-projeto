    <nav class="round">
        <ul>
            <li><%= link_to "Página inicial", root_path %></li>
            <% if not signed_in? %>            
                <li><%= form_for(:session, :url => sessions_path) do |f| %>
                    <li class="field"> <%= f.label :email %>  <%= f.text_field :email %></li>
                    <li class="field"> <%= f.label "Senha" %> <%= f.password_field :password %></li>
                    <li class="actions"> <%= f.submit "Login" %> </li>
                <% end %></li>
            <% end %>
            <% if signed_in? %>
                <li><%= link_to "Perfil", current_user %></li>
                <li><%= link_to "Cadastrar Oferta",  novaoferta_path %></li>
                <li><%= link_to "Usuários", users_path %></li>
                <li><%= link_to "Todas as Ofertas", todas_ofertas_path %></li>
            <% end %>
        </ul>
    </nav>

