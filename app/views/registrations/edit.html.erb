<div class="main">
  <div class="window medium_window">
    <div class="up"></div>
    <div class="middle newProfile" id="userCreateAreaId">
      <div>
        <!-- TODO: Imagem -->
        <h1>DealWit.me</h1>
        <!-- TODO: Facebook / Google -->
        <h3>Edite suas informações</h3>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
          <ol>
            <li>
              <div class="foto consumidor photo"> 
                <%= image_tag @user.gravatar_url %>
              </div>
              <a href="http://gravatar.com/emails/" target="_blank" > <%= I18n.t('actions.edit_picture') %></a>
            </li>
            <li>
              <%= f.label :email %>
              <%= f.text_field :email %>
            </li>

            <li>
              <%= f.label :username %>
              <%= f.text_field :username %>
              <span class="limite">Limite <strong>20</strong> caracteres</span>
            </li>

            <li>
              <%= f.label :name %>
              <%= f.text_field :name %>
            </li>

            <% if @user.password_required? %>
              <li>
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
                <%= f.password_field :password %>
                <span class="limite">Mínimo <strong>6</strong> caracteres</span>
              </li>

              <li>
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation %>
              </li>

              <li>
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
                <%= f.password_field :current_password %>
              </li>
            <% end %>

          </ol>

          <!-- TODO: Transformar o botão igual ao link -->
          <!--<a tabindex="11" class="perfil" href="javascript:;">Atualizar</a>-->
          <div class="button"><%= f.submit "Atualizar", :type=>"image", :src=> asset_path('botao.png'), :alt=> "Confirmar" %></div>
        <% end %>
        <p>Unhappy? <%= link_to "Cancelar minha conta", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
        <%= link_to "Voltar", :back %>        
      </div>
    </div>
    <div class="down">
    </div>
  </div>
</div>
